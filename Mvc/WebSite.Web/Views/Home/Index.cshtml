@model List<WebSite.Models.Article>

<section class="wow bounceInRight container" id="article">
    <header class="row">
        <h1>News</h1>
    </header>
    <article class="row">
        @{
            foreach (var article in this.Model)
            {
                <div class="col-md-4">
                    <h3>@article.Title</h3>
                    <div>
                        @article.Content
                    </div>
                    <img src="~/@(article.Image.Location + article.Image.OriginalFileName)" style="width:100%; height:220px;;"/>
                </div>
            };
        }
    </article>
</section>

@Html.Action("Events", "Home")


