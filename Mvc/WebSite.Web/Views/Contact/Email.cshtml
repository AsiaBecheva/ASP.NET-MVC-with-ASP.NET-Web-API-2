@model WebSite.Web.Models.EmailViewModel



<section class="container-fluid" id="email"> 
@using (Html.BeginForm("Email", "Contact", FormMethod.Post, new { @class = "form-horizontal", role = "form"}))
{
       @Html.AntiForgeryToken()
    <header>
        <h1>Contact us</h1>
    </header>

    <div class="form-group row">
        <label class="col-md-2 text-right lab" for="Name">Name<i class="glyphicon glyphicon-user"></i></label>
        <div class="col-md-8">
            <input type="text" class="form-control" id="name" name="Name" placeholder="Name">
        </div>
    </div>
    <div>@Html.ValidationMessageFor(x => x.Name)</div>
    
    <div class="form-group row">
        <label class="col-md-2 text-right lab" for="Phone">Phone<i class="glyphicon glyphicon-earphone"></i></label>
        <div class="col-md-8">
            <input type="tel" class="form-control" id="phone" name="Phone" placeholder="Phone">
        </div>
    </div>
    <div>@Html.ValidationMessageFor(x => x.Phone)</div>

    <div class="form-group row">
        <label class="col-md-2 text-right lab" for="Company">Company<i class="glyphicon glyphicon-briefcase"></i></label>
        <div class="col-md-8">
            <input type="text" class="form-control" id="company" name="Company" placeholder="Company">
        </div>
    </div>
    <div>@Html.ValidationMessageFor(x => x.Company)</div>

    <div class="form-group row">
        <label class="col-md-2 text-right lab" for="Subject">Subject<i class="glyphicon glyphicon-flag"></i></label>
        <div class="col-md-8">
            <input type="text" class="form-control" id="subject" name="Subject" placeholder="Subject">
        </div>
    </div>
    <div>@Html.ValidationMessageFor(x => x.Subject)</div>

    <div class="form-group row">
        <label class="col-md-2 text-right lab" for="Message">Message<i class="glyphicon glyphicon-pencil"></i></label>
        <div class="col-md-8">
            <textarea type="text" class="form-control" id="message" name="Message" rows="5" placeholder="Message"></textarea>
        </div>
    </div>
    <div>@Html.ValidationMessageFor(x => x.Message)</div>

    <div class="form-group row">
        <input type="submit" class="btn btn-danger" style="margin-left:310px;"/>
    </div>
}
</section>
@if (TempData["Success"] != null)
{
    <h2 class="alert alert-success" style="text-align:center;">
        @TempData["Success"]
    </h2>
}


@section scripts{
    @Scripts.Render("~/bundles/jqueryval")  
}